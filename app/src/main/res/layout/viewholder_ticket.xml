<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/tiketCard"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

    <!-- ImageView dengan background drawable untuk rounded corners -->
    <ImageView
            android:id="@+id/eventCardImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/bgtiketfix"/>

    <TextView
            android:id="@+id/namaEventTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_search"
            android:gravity="center_vertical"
            android:paddingHorizontal="12sp"
            android:text="Lari Asik BangetgucuyuyCuyctuyuychcut"
            android:textColor="@color/black"
            android:maxWidth="300dp"
            android:maxLines="2"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Kode Booking"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/idPeserta"
            app:layout_constraintEnd_toEndOf="@+id/idPeserta" />

    <TextView
            android:id="@+id/idPeserta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="123456789"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/waktuMulaiTxt"
            app:layout_constraintEnd_toEndOf="@+id/waktuMulaiTxt" />

    <!--    <TextView-->
    <!--        android:id="@+id/textView7"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="TextView"-->
    <!--        app:layout_constraintBottom_toTopOf="@+id/waktuMulaiTxt"-->
    <!--        app:layout_constraintEnd_toEndOf="@+id/waktuMulaiTxt" />-->

    <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:text="Lokasi"
            app:layout_constraintBottom_toTopOf="@+id/lokasiTxt"
            app:layout_constraintStart_toStartOf="@+id/lokasiTxt" />

    <TextView
            android:id="@+id/lokasiTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="40dp"
            android:maxWidth="200dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Lokasi iyvyuiwegvoiq3bgpwi3gtpqi3gtroliqa3wvrqoi3gr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/waktuMulaiTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="13-09-2023"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
