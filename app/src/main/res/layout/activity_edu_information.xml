<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/eduInformationActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                tools:context=".EduInformation">

    <!-- Header -->
    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Selamat Datang"
            android:textSize="14sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>


    <ImageView
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="30dp"
            android:src="@drawable/default_profile_image"/>


    <TextView
            android:id="@+id/textViewAyman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:text="User"
            android:textColor="@color/white"
            android:layout_marginStart="30dp"
            android:textSize="24dp"/>


    <!-- ScrollView for all Cards -->
    <ScrollView
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textViewAyman"
            android:layout_marginTop="20dp"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edukasi dan Informasi"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="30dp"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tingkatkan pengetahuanmu untuk menjadi lebih baik"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="30dp"
                    android:textStyle="normal"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/educationCard"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/eventImage2"
                            android:background="@drawable/edu1"
                            android:padding="20dp">

                        <TextView
                                android:id="@+id/textViewEventName2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manfaat Lari Pagi"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"/>

                        <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/circle_backround_arrow">

                            <ImageView
                                    android:id="@+id/detailEvent2"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_arrow_right"
                                    android:tint="#000000"/>
                        </FrameLayout>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/educationCard2"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edu2"
                            android:padding="20dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Efek Lari Pagi"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"/>

                        <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/circle_backround_arrow">

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_arrow_right"
                                    android:tint="#000000"/>
                        </FrameLayout>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/educationCard3"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edu3"
                            android:padding="20dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cara Berlari yang Tepat"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"/>

                        <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/circle_backround_arrow">

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_arrow_right"
                                    android:tint="#000000"/>
                        </FrameLayout>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true">

        <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:id="@+id/bottomNavigationContainer"

                android:background="@color/black">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:id="@+id/nav1"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imgNav1"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@drawable/trophy"/>

                    <TextView
                            android:id="@+id/textNav1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:text="Beranda"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:id="@+id/nav2"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imgNav2"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@drawable/ticket"/>

                    <TextView
                            android:id="@+id/textNav2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:text="Tiket"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:id="@+id/nav3"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imgNav3"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@drawable/note"/>

                    <TextView
                            android:id="@+id/textNav3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:text="Histori"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:id="@+id/nav4"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imgNav4"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@drawable/trophy"/>

                    <TextView
                            android:id="@+id/textNav4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:text="Pencapaian"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>





